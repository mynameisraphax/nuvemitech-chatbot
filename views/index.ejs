<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NuvemITech CRM</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
  <header class="bg-blue-600 text-white p-4">
    <div class="container mx-auto flex justify-between items-center">
      <div class="flex items-center">
        <img src="/logo.png" alt="NuvemITech Logo" class="h-10 mr-3">
        <h1 class="text-2xl font-bold">NuvemITech CRM</h1>
      </div>
      <nav>
        <a href="/logout" class="text-white hover:underline">Sair</a>
      </nav>
    </div>
  </header>
  <main class="container mx-auto p-6 flex-grow">
    <h2 class="text-3xl font-semibold mb-6">Bem-vindo, <%= user %></h2>
    <h3 class="text-2xl font-medium mb-4">Leads</h3>
    <% if (error) { %>
      <p class="text-red-500 mb-4"><%= error %></p>
    <% } %>
    <div class="overflow-x-auto">
      <table class="w-full bg-white shadow-md rounded-lg">
        <thead class="bg-gray-200">
          <tr>
            <th class="p-3 text-left">ID</th>
            <th class="p-3 text-left">Nome</th>
            <th class="p-3 text-left">Telefone</th>
            <th class="p-3 text-left">Data</th>
          </tr>
        </thead>
        <tbody>
          <% leads.forEach(lead => { %>
            <tr class="border-b">
              <td class="p-3"><%= lead.id %></td>
              <td class="p-3"><%= lead.name %></td>
              <td class="p-3"><%= lead.phone %></td>
              <td class="p-3"><%= lead.timestamp %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </main>
  <footer class="bg-blue-600 text-white p-4">
    <div class="container mx-auto text-center">
      <p>Â© 2025 NuvemITech. Todos os direitos reservados.</p>
    </div>
  </footer>
</body>
</html>